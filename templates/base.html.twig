		</li>
		<li>
			{#si je suis connecter afficher logout si non login #}
			<div class="mb-3">
				{% if app.user %}
					Vous êtes connecté en tant que 
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Se Déconnecter</a>
				{% else %}
					<a href="{{ path('connect') }}">Se Connecter</a>
					<a href="{{ path('app_register') }}">Créer Mon Profile</a>
				{% endif %}
			</div>
		</li>
	</body>

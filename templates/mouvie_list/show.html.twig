{% extends 'base.html.twig' %}

{% block title %}MouvieList
{% endblock %}

{% block body %}
	<h1>MouvieList</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ mouvie_list.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ mouvie_list.name }}</td>
			</tr>
			<tr>
				<th>User</th>
				<td>{{ mouvie_list.user.email }}</td>
			</tr>
			<tr>
				<th>Mouvies</th>
				<td>
					<ul>
						{% for mouvie in mouvie_list.mouvies %}
							<li>{{ mouvie }}</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('mouvie_list_index') }}">back to list</a>

	<a href="{{ path('mouvie_list_edit', {'id': mouvie_list.id}) }}">Modifier</a>

	{{ include('mouvie_list/_delete_form.html.twig') }}
{% endblock %}

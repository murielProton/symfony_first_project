{% extends 'base.html.twig' %}

{% block title %}_DELETE_Mouvies{% endblock %}

{% block body %}
<form method="post" action="{{ path('mouvie_list_delete', {'id': mouvie_list.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mouvie_list.id) }}">
    <button class="btn">Delete</button>
</form>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Mouvies{% endblock %}

{% block body %}
    <h1>Mouvies</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Popularity</th>
                <td>{{ mouvy.popularity }}</td>
            </tr>
            <tr>
                <th>Vote_count</th>
                <td>{{ mouvy.voteCount }}</td>
            </tr>
